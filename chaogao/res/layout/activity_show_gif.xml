<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <com.androidex.widget.asyncimage.AsyncImageView
        android:id="@+id/gif_iv"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <ImageView 
	    android:id="@+id/show_gif_back_iv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="20dp"
	    android:layout_marginLeft="20dp"
	    android:src="@drawable/btn_gif_back_selector"
	    />
	<ImageView 
	    android:id="@+id/show_gif_share_iv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="20dp"
	    android:layout_marginRight="20dp"
	    android:src="@drawable/btn_gif_share_selector"
	    />
</RelativeLayout>